<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eticaret.androidciftci.UserPanelActivity">

    <TextView
        android:text="Hoş Geldiniz: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblEmail"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:text="Ürün Ekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddProduct"
        android:textSize="14sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/spinnerProducts"
        android:layout_below="@+id/btnAddProduct"
        android:elevation="1dp"
        android:layout_alignParentStart="true"
        android:drawSelectorOnTop="true"
        android:addStatesFromChildren="false" />

    <TextView
        android:text="Ürün Adı: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerProducts"
        android:layout_alignParentStart="true"
        android:layout_marginTop="108dp"
        android:id="@+id/textView2"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:text="Açıklama: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:text="Fiyat: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="18dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Stok: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView4"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtProductName"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView5"
        android:text="-" />

    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtStock"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_above="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtExplanation"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrice"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView5" />

    <Button
        android:text="Listele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerProducts"
        android:layout_alignEnd="@+id/btnAddProduct"
        android:layout_marginTop="15dp"
        android:id="@+id/btnList" />

</RelativeLayout>
