<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eticaret.androidciftci.AddProductActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtProductName"
        android:hint="Ürün Adı"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtCity" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtProductName"
        android:layout_marginTop="16dp"
        android:id="@+id/txtCity"
        android:hint="Şehir"
        android:textAlignment="viewStart"
        android:layout_alignStart="@+id/btnAddProduct" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/txtPrice"
        android:hint="Fiyat"
        android:layout_below="@+id/txtCity"
        android:textAlignment="viewStart"
        android:layout_alignStart="@+id/txtCity" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/txtStock"
        android:hint="Stok"
        android:layout_below="@+id/txtPrice"
        android:textAlignment="viewStart"
        android:inputType="number"
        android:layout_alignStart="@+id/txtPrice" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/txtExplanation"
        android:hint="Açıklama"
        android:textAlignment="viewStart"
        android:layout_below="@+id/txtStock"
        android:layout_alignStart="@+id/txtStock" />

    <TextView
        android:text="Açıklama: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/txtExplanation"
        android:layout_alignBottom="@+id/txtExplanation"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@color/iron" />

    <TextView
        android:text="Stok: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/txtStock"
        android:layout_alignBottom="@+id/txtStock"
        android:layout_alignEnd="@+id/textView6"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@color/iron" />

    <TextView
        android:text="Fiyat: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/txtPrice"
        android:layout_alignBottom="@+id/txtPrice"
        android:layout_alignStart="@+id/textView4"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@color/iron" />

    <TextView
        android:text="Şehir: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/txtCity"
        android:layout_alignBottom="@+id/txtCity"
        android:layout_alignEnd="@+id/textView6"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@color/iron" />

    <TextView
        android:text="Ürün Adı: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/txtProductName"
        android:layout_alignBottom="@+id/txtProductName"
        android:layout_alignEnd="@+id/textView5"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@color/iron" />

    <Button
        android:text="Ürün Ekle / Güncelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddProduct"
        android:layout_marginTop="27dp"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/txtExplanation"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:text="SİL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeleteProduct"
        android:layout_below="@+id/btnAddProduct"
        android:layout_alignStart="@+id/btnAddProduct"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp" />


</RelativeLayout>
